{
  "name": "php-dao-generator",
  "displayName": "PHP DAO Generator",
  "publisher": "Baptiste-TABAR-LABONNE",
  "description": "Generate PHP DAO classes from SQL database tables",
  "version": "1.5.5",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "assets/img/logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "php",
    "dao",
    "database",
    "mysql",
    "generator",
    "orm",
    "code-generation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "phpDaoGenerator",
          "name": "PHP DAO Generator",
          "when": "true",
          "icon": "$(database)"
        }
      ],
      "php-dao-explorer": [
        {
          "id": "phpDaoConnections",
          "name": "SERVEURS",
          "when": "true",
          "icon": "$(database)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "php-dao-explorer",
          "title": "PHP DAO Generator",
          "icon": "$(database)"
        }
      ]
    },
    "commands": [
      {
        "command": "phpDaoGenerator.addConnection",
        "title": "Ajouter un serveur",
        "icon": "$(add)"
      },
      {
        "command": "phpDaoGenerator.refreshConnections",
        "title": "Rafraîchir",
        "icon": "$(refresh)"
      },
      {
        "command": "phpDaoGenerator.editConnection",
        "title": "Modifier le serveur",
        "icon": "$(edit)"
      },
      {
        "command": "phpDaoGenerator.deleteConnection",
        "title": "Supprimer le serveur",
        "icon": "$(trash)"
      },
      {
        "command": "phpDaoGenerator.connect",
        "title": "Connecter",
        "icon": "$(plug)"
      },
      {
        "command": "phpDaoGenerator.disconnect",
        "title": "Se déconnecter",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "phpDaoGenerator.openTableSelection",
        "title": "Générer DAO",
        "icon": "$(code)"
      },
      {
        "command": "phpDaoGenerator.exportConnections",
        "title": "Exporter les serveurs",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "phpDaoGenerator.importConnections",
        "title": "Importer les serveurs",
        "icon": "$(cloud-download)"
      },
      {
        "command": "phpDaoGenerator.toggleSort",
        "title": "Trier",
        "icon": "$(list-ordered)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "phpDaoGenerator.addConnection",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        },
        {
          "command": "phpDaoGenerator.refreshConnections",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        },
        {
          "command": "phpDaoGenerator.exportConnections",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        },
        {
          "command": "phpDaoGenerator.importConnections",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        },
        {
          "command": "phpDaoGenerator.toggleSort",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "phpDaoGenerator.editConnection",
          "when": "view == phpDaoConnections && viewItem == disconnectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.deleteConnection",
          "when": "view == phpDaoConnections && viewItem == disconnectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.connect",
          "when": "view == phpDaoConnections && viewItem == disconnectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.disconnect",
          "when": "view == phpDaoConnections && viewItem == connectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.openTableSelection",
          "when": "view == phpDaoConnections && viewItem == database",
          "group": "inline"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TabarBaptiste/dao-generation"
  },
  "bugs": {
    "url": "https://github.com/TabarBaptiste/dao-generation/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run build:esbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:tsc": "tsc -watch -p ./",
    "watch:esbuild": "node esbuild.js --watch",
    "build:esbuild": "node esbuild.js --production",
    "package": "vsce package",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "vsce:package": "vsce package --no-update-package-json"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.32.0",
    "glob": "^11.0.3",
    "semantic-release": "^24.2.7",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "mysql2": "^3.14.4"
  }
}
