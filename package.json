{
  "name": "php-dao-generator",
  "displayName": "PHP DAO Generator",
  "publisher": "Baptiste-TABAR-LABONNE",
  "description": "Generate PHP DAO classes from SQL database tables",
  "version": "0.0.4",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "assets/img/logo2.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "php",
    "dao",
    "database",
    "mysql",
    "generator",
    "orm",
    "code-generation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "phpDaoGenerator",
          "name": "PHP DAO Generator",
          "when": "true",
          "icon": "$(database)"
        }
      ],
      "php-dao-explorer": [
        {
          "id": "phpDaoConnections",
          "name": "Database Connections",
          "when": "true",
          "icon": "$(database)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "php-dao-explorer",
          "title": "PHP DAO Generator",
          "icon": "$(database)"
        }
      ]
    },
    "commands": [
      {
        "command": "phpDaoGenerator.addConnection",
        "title": "Add Database Connection",
        "icon": "$(add)"
      },
      {
        "command": "phpDaoGenerator.refreshConnections",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "phpDaoGenerator.editConnection",
        "title": "Edit Connection",
        "icon": "$(edit)"
      },
      {
        "command": "phpDaoGenerator.deleteConnection",
        "title": "Delete Connection",
        "icon": "$(trash)"
      },
      {
        "command": "phpDaoGenerator.connect",
        "title": "Connect",
        "icon": "$(plug)"
      },
      {
        "command": "phpDaoGenerator.disconnect",
        "title": "Disconnect",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "phpDaoGenerator.openTableSelection",
        "title": "Generate DAO",
        "icon": "$(code)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "phpDaoGenerator.addConnection",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        },
        {
          "command": "phpDaoGenerator.refreshConnections",
          "when": "view == phpDaoConnections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "phpDaoGenerator.editConnection",
          "when": "view == phpDaoConnections && viewItem == disconnectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.deleteConnection",
          "when": "view == phpDaoConnections && viewItem == disconnectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.connect",
          "when": "view == phpDaoConnections && viewItem == disconnectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.disconnect",
          "when": "view == phpDaoConnections && viewItem == connectedConnection",
          "group": "inline"
        },
        {
          "command": "phpDaoGenerator.openTableSelection",
          "when": "view == phpDaoConnections && viewItem == database",
          "group": "inline"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TabarBaptiste/dao-generation"
  },
  "scripts": {
    "vscode:prepublish": "npm run build:esbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:esbuild": "node esbuild.js --watch",
    "build:esbuild": "node esbuild.js --production",
    "package": "vsce package",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.32.0",
    "glob": "^11.0.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "mysql2": "^3.14.4"
  }
}
